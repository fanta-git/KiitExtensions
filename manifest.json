{
    "name": "KiitExtension",
    "author": "fanta",
    "description": "PC版KiiteCafeに動画概要表示や選曲履歴機能を追加する拡張機能です",
    "version": "1.0.0",
    "manifest_version": 2,
    "permissions": [
		"tabs",
        "storage"
    ],
    "background":{
        "scripts":[
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://cafe.kiite.jp/*"],
            "css": ["CafExtension/style.css"],
            "js" : ["CafExtension/script.js"]
        },
        {
            "matches": ["https://embed.nicovideo.jp/watch/*"],
            "js" : ["CafExtension/iframe.js"],
            "all_frames": true
        }
    ]
}