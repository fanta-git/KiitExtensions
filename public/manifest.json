{
    "name": "KiitExtension",
    "author": "fanta",
    "description": "PC版KiiteCafeに動画概要表示や選曲履歴機能を追加する拡張機能です",
    "version": "1.1.0",
    "manifest_version": 3,
    "icons":{
        "128": "icon/128.png",
        "48": "icon/48.png",
        "32": "icon/32.png",
        "16": "icon/16.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://cafe.kiite.jp/pc"],
            "css": ["css/main.css"],
            "js" : ["js/main.js"],
            "run_at":"document_start"
        },
        {
            "matches": ["https://embed.nicovideo.jp/watch/*"],
            "js" : ["js/iframe.js"],
            "all_frames": true
        }
    ],
    "options_ui": {
        "page": "html/options_page.html",
        "browser_style": false
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "commands": {
        "test": {
            "description": "for test",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+0",
                "mac": "Command+Shift+0"
            }
        },
        "start-stop": {
            "description": "for test",
            "global": true,
            "suggested_key": {
                "default": "MediaPlayPause"
            }
        }
    }
}
