{
    "name": "KiitExtension",
    "author": "fanta",
    "description": "PC版KiiteCafeに動画概要表示や選曲履歴機能を追加する拡張機能です",
    "version": "1.1.0",
    "manifest_version": 3,
    "icons":{
        "128": "icon/128.png",
        "48": "icon/48.png",
        "32": "icon/32.png",
        "16": "icon/16.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://cafe.kiite.jp/pc"],
            "css": ["css/main.css"],
            "js" : ["js/main.js"]
        },
        {
            "matches": ["https://embed.nicovideo.jp/watch/*"],
            "js" : ["js/iframe.js"],
            "all_frames": true
        }
    ],
    "options_ui": {
        "page": "html/options.html",
        "browser_style": false
    }
}
